<Button>:
    font_size: 60

<Label>:
    halign: 'center'
    valign: 'center'
    text_color: 

<MainScreen>:

    FloatLayout:

        size: root.width, root.height

        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.1

            Rectangle:
                size: 100, 803
                pos: 440, 162
            
            Rectangle:
                size: 100, 803
                pos: 1380, 162

            Color:
                rgba: 0, 1, 0, 1

            Rectangle:
                size: 100, 4 * root.throttle_percent    # top left rectangle 
                pos: 440, 565

            Color:
                rgba: 1, 0, 0, 1

            Rectangle:
                size: 100, -4 * root.brake_percent      # bottem left rectangle 
                pos: 440, 562

            Color:
                rgba: 0, 0, 1, 1
            
            Rectangle:
                size: 100, 8.03 * root.clutch_percent # right rectangle
                pos: 1380, 162

            Color:
                rgba: 1, 1 - (root.rpm - 13000) / 2000.0, 1 - (root.rpm - 10000) / 3000.0, 1


            Ellipse:
                size: 800, 800
                pos: 560, 165
                source: 'Pointer.png'
                angle_start: -180
                angle_end: (-180 + root.rpm * 270 / 15000) if (root.rpm <= 15000) else 90

            Color:
                rgba: 1, 1, 1, 1
            
            Rectangle:
                size: 100, 3
                pos: 440, 562
           

            Ellipse:
                size: 800, 800
                pos: 560, 165
                source: 'Gague.png'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.22, 0.2
            pos_hint: {"right": 1, "top": 0.85}
            Label:
                font_size: 150
                text: str(root.lambda_value)

            Label:
                size_hint: 1, 0.3
                font_size: 40
                text: 'Lambda'
                canvas:
                    Color:
                        rgba: 1, 1, 1, 0.1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.22, 0.2
            pos_hint: {"right": 1, "top": 0.6}
            Label:
                font_size: 150
                text: str(root.oil_pressure)

            Label:
                size_hint: 1, 0.3
                font_size: 40
                text: 'Oil Pressure (PSI)'
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 0.1) if int(root.oil_pressure) >= 20 else (1,0,0,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.22, 0.2
            pos_hint: {"x":0,"top":0.85}
            Label:
                font_size: 150
                text: str(root.head_temperature)

            Label:
                size_hint: 1, 0.3
                font_size: 40
                text: 'Head Temp (F)'
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 0.1) if int(root.head_temperature) <= 210 else (1,0,0,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.22, 0.2
            pos_hint: {"left":0,"top":0.6}
            Label:
                font_size: 150
                text: str(root.coolant_temperature)

            Label:
                size_hint: 1, 0.3
                font_size: 40
                text: 'Coolant Temp (F)'
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 0.1) if int(root.coolant_temperature) <= 210 else (1,0,0,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos


        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.22, 0.2
            pos_hint: {"x":0,"top":0.35}
            Label:
                font_size: 150
                text: str(root.fuel_pressure)

            Label:
                size_hint: 1, 0.3
                font_size: 40
                text: 'Fuel Pressure (kPa)'
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 0.1) if int(root.fuel_pressure) >= 290 else (1,0,0,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.22, 0.2
            pos_hint: {"right":1,"top":0.35}
            Label:
                font_size: 150
                text: str(root.battery_voltage)

            Label:
                size_hint: 1, 0.3
                font_size: 40
                text: 'Battery Voltage (V)'
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 0.1) if int(root.battery_voltage) >= 12 else (1,0,0,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 0.4
            pos_hint: {"center_x":0.5,"center_y":0.55}
            Label:
                font_size: 400
                text: 'N' if root.gear == 0 else str(root.gear)

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.18, 0.2
            pos_hint: {"x":0.52,"top":0.35}
            Label:
                font_size: 200
                text: str(root.speed)

            Label:
                size_hint: 1, 0.3
                font_size: 40
                text: 'Speed (MPH)'
                canvas:
                    Color:
                        rgba: 1, 1, 1, 0.1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        Label:
            size_hint: 0.18, 0.2
            pos_hint: {"x":0.55,"top":0.55}
            font_size: 40
            halign: 'left'
            text: 'LAP: 00:00.00'
        
        Label:
            size_hint: 0.18, 0.2
            pos_hint: {"x":0.55,"top":0.5}
            font_size: 40
            halign: 'left'
            text: 'Delta: -0.00'

        Label:
            size_hint: 0.18, 0.2
            pos_hint: {"center_x":0.5,"top":0.4}
            font_size: 40
            text: '0'
        
        Label:
            size_hint: 0.18, 0.2
            pos_hint: {"center_x":0.38,"center_y":0.525}
            font_size: 40
            text: '5'

        Label:
            size_hint: 0.18, 0.2
            pos_hint: {"center_x":0.5,"top":0.85}
            font_size: 40
            text: '10'

        Label:
            size_hint: 0.18, 0.2
            pos_hint: {"center_x":0.62,"center_y":0.525}
            font_size: 40
            text: '15'

        Button:
            size_hint: 0.33, 0.12
            pos_hint: {"x":0,"y":0}
            text: "Brake"
            id: Brake
            on_release:
                app.kivy_manager.change_screen('BrakeScreen')

        Button:
            size_hint: 0.33, 0.12
            pos_hint: {"x":0.33,"y":0}
            text: "Suspension"
            id: Suspension
            on_release:
                app.kivy_manager.change_screen('SuspensionScreen')

        Button:
            size_hint: 0.33, 0.12
            pos_hint: {"x":0.66,"y":0}
            text: "Track"
            id: Track
            on_release:
                app.kivy_manager.change_screen('TrackScreen')

        Button:
            size_hint: .2, 0.12 
            pos_hint: {"x":0,"y":.9}
            text: ""
            background_color: (1, 1, 0, 0) 
            on_release: 
                app.kivy_manager.change_screen('SettingsScreen')
        
        Label:
            size_hint: 0.1, 0.08
            pos_hint: {"x":0,"top":1}
            font_size: 60
            halign: 'left'
            text: "ODO " + str(root.odo)

        Label:
            size_hint: 0.08, 0.08
            pos_hint: {"right":0.2,"top":1} #.84
            font_size: 45
            text: 'BSPD'

            canvas.before:
                Color:
                    rgba: not root.BSPD_status, root.BSPD_status, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

        Label:
            size_hint: 0.08, 0.08
            pos_hint: {"right":0.28,"top":1}
            font_size: 45
            text: 'BOTS'

            canvas.before:
                Color:
                    rgba: not root.BOTS_status, root.BOTS_status, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos


        Label:
            size_hint: 0.1, 0.08
            pos_hint: {"x":0.3,"top":1}
            font_size: 60
            text: root.tune_mode
            canvas.before:
                Color:
                    rgba: (1,0,0,1) if root.tune_mode == 'Null' else (0,1,0,1) if root.tune_mode == 'F' else (0,0,1,1) if root.tune_mode == 'M' else (.5,.5,0,1) if root.tune_mode == 'A' else (0,.5,.5,1) if root.tune_mode == 'D' else (.5,.5,.5,1) if root.tune_mode == 'F2' else (.25,.25,0,1)
                Rectangle:
                    size: self.width ,self.height
                    pos: self.pos

        Label:
            text: str(root.rpm)
            font_size: 80
            size_hint: 0.2, 0.08
            pos_hint: {"center_x":0.5,"top":1}
            canvas.before:
                Color:
                    rgba: 1,1,1,0.1
                Rectangle:
                    size: self.width ,self.height
                    pos: self.pos



        Label:
            size_hint: 0.08, 0.08
            pos_hint: {"right":0.68,"top":1} #.76
            font_size: 45
            text: 'BSE'
            
            canvas.before:
                Color:
                    rgba: not root.BSE_status, root.BSE_status, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos


        
        Label:
            size_hint: 0.08, 0.08 #(width_proportion, height_proportion)
            pos_hint: {"right":0.76,"top":1} #.92
            font_size: 45
            text: 'TPS'
            
            canvas.before:
                Color:
                    rgba: root.TPS_status, not root.TPS_status, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

        Label:
            size_hint: 0.08, 0.08
            pos_hint: {"right":.84,"top":1} #1
            font_size: 45
            text: 'APPS'
            
            canvas.before:
                Color:
                    rgba: root.APPS_status, not root.APPS_status, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
        
        Label:
            size_hint: 0.08, 0.08
            pos_hint: {"right":.92,"top":1}
            font_size: 45
            text: 'BAGR'
            
            canvas.before:
                Color:
                    rgba: not root.BSEA_status, root.BSEA_status, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            

        Label:
            size_hint: 0.08, 0.08
            pos_hint: {"right":1,"top":1}
            font_size: 45
            text: 'AAGR'
            
            canvas.before:
                Color:
                    rgba: not root.APPSA_status, root.APPSA_status, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos





