                    Rectangle:
                        size: self.size
                        pos: self.pos

        Button:
            size_hint: 1, 0.12
            pos_hint: {"x":0,"y":0}
            text: "Return"
            id: Return
            on_release:
                app.kivy_manager.change_screen('MainScreen')

<TrackScreen>:

    FloatLayout:
        size: root.width, root.height

        Button:
            size_hint: 0.5, 0.12
            pos_hint: {"x":0,"y":0}
            text: "Return"
            id: Return
            on_release:
                app.kivy_manager.change_screen('MainScreen')
        
        Button:
            size_hint: 0.5, 0.12
            pos_hint: {"x":0.5,"y":0}
            text: "Set Beacon"
            id: Set_Beacon
            on_release:
                app.sendCanMsg('SetBeacon',0)
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.35, 0.3
            pos_hint: {"x":0.1,"top":0.9}
            Label:
                font_size: 100
                text: "{:.7f}".format(root.current_latitude)

            Label:
                size_hint: 1, 0.2
                font_size: 50
                text: 'Current Latitude'
                canvas:
                    Color:
                        rgba: 1, 1, 1, 0.1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.35, 0.3
            pos_hint: {"right":0.9,"top":0.9}
            Label:
                font_size: 100
                text: "{:.7f}".format(root.current_longitude)

            Label:
                size_hint: 1, 0.2
                font_size: 50
                text: 'Current Longitude'
                canvas:
                    Color:
                        rgba: 1, 1, 1, 0.1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.35, 0.3
            pos_hint: {"x":0.1,"y":0.2}
            Label:
                font_size: 100
                text: "{:.7f}".format(root.beacon_latitude)

            Label:
                size_hint: 1, 0.2
                font_size: 50
                text: 'Beacon Latitude'
                canvas:
                    Color:
                        rgba: 1, 1, 1, 0.1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.35, 0.3
            pos_hint: {"right":0.9,"y":0.2}
            Label:
                font_size: 100
                text: "{:.7f}".format(root.beacon_longitude)

            Label:
                size_hint: 1, 0.2
                font_size: 50
                text: 'Beacon Longitude'
                canvas:
                    Color:
                        rgba: 1, 1, 1, 0.1
                    Rectangle:
                        size: self.size
                        pos: self.pos

<SettingsScreen>:

    FloatLayout:
        size: root.width, root.height

        ScrollView:
            pos_hint: {"right":1,"top":1}
            size_hint: 1, 0.87
            scroll_distance: 20

            GridLayout:
                cols: 1
                size_hint_y: None
                row_default_height: root.height*0.1
                spacing: [0,5] 
                height: self.minimum_height

                Button:
                    text: 'Launch Terminal'
                    id:Launch_Terminal
                    on_release:
                        app.stopApp()

                Button:
                    text: 'Restart Dash'
                    id:Restart_Dash
                    on_release:
                        app.restart()

                Label:
                    text: root.ip_address
                    font_size: 40

                Label:
                    text: 'HUSKERDASH 2020.4'
                    font_size: 40

        Button:
            size_hint: 1, 0.12
            pos_hint: {"x":0,"y":0}
            text: "Return"
            id:Return
            on_release:
                app.kivy_manager.change_screen('MainScreen')